@model  ICollection<Post>

<h2>Posts</h2>

<html>
<head>
    <title>Posts</title>
</head>
<body>
    @foreach (var item in Model)
    {
    <dl>
        <dt><a asp-action="ViewPost" asp-controller="Post" asp-route-postId="@item.Id">@item.Title</a></dt>
    </dl>
        <dl>
            <dt>Author:</dt>
            <dd>@item.AuthorName</dd>
        </dl>
        <hr />
    }
</body>
</html>